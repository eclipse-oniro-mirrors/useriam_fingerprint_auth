  external_deps = [
    "c_utils:utils",
    "drivers_interface_fingerprint_auth:libfingerprint_auth_proxy_1.0",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_single",
    "user_auth_framework:userauth_executors",
  ]
  remove_configs = [ "//build/config/compiler:no_exceptions" ]
}

group("unittest") {
  testonly = true

  deps = [ ":FingerprintAuthServiceUnitTest" ]
}
