import("//build/test.gni")

ohos_unittest("FingerprintAuthServiceUnitTest") {
  module_out_path = "useriam/fingerprint_auth"

  sources = [
    "fingerprint_auth_driver_hdi_unit_test.cpp",
    "fingerprint_auth_executor_callback_hdi_unit_test.cpp",
    "fingerprint_auth_executor_hdi_unit_test.cpp",
  ]

  include_dirs = [
    "mock",
    "//base/useriam/user_auth_framework/common/logs",
    "//base/useriam/user_auth_framework/common/utils",
    "//base/useriam/fingerprint_auth/common/inc",
    "//base/useriam/fingerprint_auth/services/inc",
    "//base/useriam/user_auth_framework/interfaces/inner_api",
  ]

  deps = [
    "//base/useriam/fingerprint_auth/services:fingerprintauthservice",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
